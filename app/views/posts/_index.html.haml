- if user_signed_in?
  = link_to 'New Post', new_post_path
%table
  - @posts.each do |post|
    %tr
      %td{:colspan => "2"}
        %h3= raw post.title
      %td= post.updated_at
    %tr
      %td{:colspan => "3"}= raw post.content
    - if user_signed_in?
      %tr
        %td= link_to 'Show', post
        %td= link_to 'Edit', edit_post_path(post)
        %td= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete
%br/
